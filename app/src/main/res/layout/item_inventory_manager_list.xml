<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_inventory_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="깡샘의 안드로이드 앱 프로그래밍 with 코틀린"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_inventory_author"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="강성윤"
        app:layout_constraintStart_toStartOf="@id/textView_inventory_title"
        app:layout_constraintTop_toBottomOf="@id/textView_inventory_title" />

    <TextView
        android:id="@+id/textView_inventory_isbn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="ISBN : 0000000000000"
        app:layout_constraintStart_toStartOf="@id/textView_inventory_author"
        app:layout_constraintTop_toBottomOf="@id/textView_inventory_author" />

    <TextView
        android:id="@+id/textView_inventory_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="2024년 01월 08일"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_inventory_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="재고 : 1개"
        app:layout_constraintEnd_toEndOf="@id/textView_inventory_date"
        app:layout_constraintTop_toBottomOf="@id/textView_inventory_date" />

    <TextView
        android:id="@+id/textView_inventory_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="품질 : 중"
        app:layout_constraintEnd_toEndOf="@id/textView_inventory_count"
        app:layout_constraintTop_toBottomOf="@id/textView_inventory_count" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_homeList_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@id/textView_inventory_isbn" />
</androidx.constraintlayout.widget.ConstraintLayout>