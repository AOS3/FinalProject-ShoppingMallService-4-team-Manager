<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.sellOrderManager.SellOrderManagerFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_sellOrderManager"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/arrow_back_ios_24px"
        app:tabGravity="start"
        app:tabIndicatorColor="@color/main_color"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorHeight="4dp"
        app:tabMode="auto"
        app:title="판매/구매 주문 관리"
        app:titleCentered="true" />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매" />

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_sellOrderManager_sortOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="invisible"
            app:boxStrokeColor="@android:color/transparent">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView_sellOrderManager_sortOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/arrow_drop_down_24px"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:inputType="none"
                android:text="검수중"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/linearLayout_sellOrderManager_sortOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imageView_sellOrderManager_dropDownText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검수중"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView_sellOrderManager_dropDownIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/arrow_drop_down_24px" />
        </LinearLayout>

    </FrameLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView_sellOrderManager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>