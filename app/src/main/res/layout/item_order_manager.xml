<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#F4F9FF"
    android:backgroundTint="#F4F9FF">

    <TextView
        android:id="@+id/textView_orderManagerItem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_orderManagerItem_deliveryResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_orderManagerItem_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView_orderManagerItem_title"
        app:layout_constraintTop_toBottomOf="@+id/textView_orderManagerItem_title" />

    <TextView
        android:id="@+id/textView_orderManagerItem_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/textView_orderManagerItem_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_orderManagerItem_author" />

    <TextView
        android:id="@+id/textView_orderManagerItem_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView_orderManagerItem_author"
        app:layout_constraintTop_toBottomOf="@+id/textView_orderManagerItem_author" />

    <TextView
        android:id="@+id/textView_orderManagerItem_orderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#0064c8"
        app:layout_constraintBottom_toBottomOf="@+id/textView_orderManagerItem_quality"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_orderManagerItem_quality" />

    <TextView
        android:id="@+id/textView_orderManagerItem_orderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView_orderManagerItem_quality"
        app:layout_constraintTop_toBottomOf="@+id/textView_orderManagerItem_quality" />

</androidx.constraintlayout.widget.ConstraintLayout>